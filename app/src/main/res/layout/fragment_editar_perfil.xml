<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayoutEditarPerfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.perfil.PerfilFragment" >

    <EditText
        android:id="@+id/etEditarPerfilDescripcion"
        android:layout_width="337dp"
        android:layout_height="167dp"
        android:backgroundTint="@color/dorado"
        android:ems="10"
        android:foregroundTint="#020EAA"
        android:hint="@string/descripcion"
        android:inputType="textMultiLine"
        android:shadowColor="#071E91"
        android:text="Tu descripcion"
        android:textColor="@color/blanco"
        android:textColorHighlight="#071E91"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#071E91"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btnEditarActualizar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEditarPerfilNickName"
        app:layout_constraintVertical_bias="0.277" />

    <EditText
        android:id="@+id/etEditarPerfilNickName"
        android:layout_width="335dp"
        android:layout_height="47dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="@color/dorado"
        android:ems="10"
        android:foregroundTint="#020EAA"
        android:hint="@string/usuario"
        android:inputType="textEmailAddress"
        android:shadowColor="#071E91"
        android:textColor="@color/blanco"
        android:textColorHighlight="#071E91"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#071E91"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/etPerfilDescripcion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivEditarPerfilFoto"
        app:layout_constraintVertical_bias="0.61" />

    <ImageView
        android:id="@+id/ivEditarPerfilFoto"
        android:layout_width="186dp"
        android:layout_height="206dp"
        android:background="@color/dorado"
        android:backgroundTint="@color/background"
        android:src="@drawable/ic_perfil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.085" />

    <Button
        android:id="@+id/btnEditarActualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/verde"
        android:backgroundTint="@color/verde"
        android:text="@string/Actualizar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.865" />

    <ImageButton
        android:id="@+id/ibEditarPerfilFoto"
        android:layout_width="52dp"
        android:layout_height="46dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="28dp"
        android:src="@drawable/ic_camara_blanca"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivPerfilFoto"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.299" />

</androidx.constraintlayout.widget.ConstraintLayout>